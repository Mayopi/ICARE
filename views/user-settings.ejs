<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Settings</title>

    <!-- bootstrap cdn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />

    <link rel="Icon" href="img/icare-logo.png" />

    <!-- style -->
    <style>
      body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --main-color: #2a2550;
        --second-color: #eaeaea;
        --additional-color: #34b3f1;
        --text-color: #333;
        --montserrat-regular: "Montserrat", sans-serif;
      }

      .area {
        margin-left: 60px;
      }

      .card {
        box-shadow: 0 4px 2px rgba(0, 0, 0, 0.5);
      }

      /* user setting form */

      .row .img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: var(--additional-color);
        margin: 20px;
      }

      .user-setting-form {
        margin-top: 50px;
        padding: 20px;
      }

      form .row .col-sm-6 {
        display: flex;
        flex-direction: column;
        gap: 1em;
      }

      form .row .col-sm-6 label {
        font-size: 1.3em;
        font-weight: bold;
      }

      form .row .col-sm-6 input {
        font-size: 1.3em;
        border: 2px solid rgba(0, 0, 0, 0.3);
        border-radius: 5px;
        padding: 5px;
        max-width: 400px;
      }

      /* end of user setting form */
    </style>

    <!-- Bootstrap Icon CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css" />
  </head>
  <body>
    <%- include('./layouts/dashboardnav') %>

    <div class="area">
      <div class="container card user-setting-form">
        <form>
          <div class="row header-setting">
            <div class="img"></div>
            <div class="caption">
              <h4>Update Your Profile</h4>
              <p>Edit input box below to update your profile</p>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <label for="number">Number</label>
              <input type="text" placeholder="something" id="number" name="email" value="<%= user.number %>" />
            </div>
            <div class="col-sm-6">
              <label for="username">Username</label>
              <input type="text" placeholder="username" id="username" name="username" value="<%= user.username %>" />
            </div>
          </div>
          <div class="row">
            <button class="btn btn-primary">Save</button>
          </div>
        </form>
      </div>
    </div>

    <script>
      const user_setting = document.querySelector("form");
      user_setting.addEventListener("submit", (event) => {
        event.preventDefault();
      });
    </script>
  </body>
</html>
